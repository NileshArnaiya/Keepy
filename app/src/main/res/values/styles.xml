<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppTheme1" parent="Theme.AppCompat.Light">     <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
    </style>



    <style name="forpasswordsyles" parent="AppTheme.NoActionBar">

    <item name="dialogRadioBtnColor"> #ff5a5a</item>

        <item name="lpv_logo">@mipmap/ic_launcher</item>

        <item name="statusSetNewPatternStr">@string/statusSetNewPatternStr</item>







        <item name="dialogQuestionsArray">@array/your_questions_array</item>

        <item name="dotAnimScaleMax">@string/animscalemax</item>
        <item name="dotNormalColor">#ffffff</item>
        <item name="dotTouchedColor">#ff5a5a</item>
        <item name="dotErrorColor">#ca3232</item>
        <item name="dialogSecondPassMessageStr">@string/dialogSecondPassMessageStr</item>

        <item name="forgotPassFailedStr">@string/forgotPassFailedStr</item>


        <item name="dialogTitleColor">#000</item>
        <item name="dialogMessageColor">#1ebfbd</item>
        <item name="dialogTextColor">#169340</item>
        <item name="dialogButtonsColor">#ff5a5a</item>


        <item name="statusNormalColor">#f2f2f0</item>
        <item name="statusErrorColor">#f2f2f0</item>



        <item name="btnTextColor">#eefdff</item>
    </style>




    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">#196591</item>
        <item name="colorPrimaryDark">#196591</item>
        <item name="colorAccent">#ffa000</item>
        <item name="android:textColor">#3e0808</item>

    </style>

    <style name="AppTheme11" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/Theme_Button</item>
    </style>

    <style name="LockActivityTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/Theme_Lock_Button</item>
        <item name="android:imageButtonStyle">@style/Theme_Lock_ImageButton</item>
        <item name="android:textColor">#210101</item>
    </style>

    <style name="ApplistTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/Theme_Applist_Button</item>
        <!-- <item name="android:textColor">#ffffff</item> -->
    </style>

    <style name="Theme_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textColor">#e10d0d</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme_Lock_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/passwordview_button_background</item>
        <item name="android:textColor">#fffcfc</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme_Lock_ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/passwordview_button_background</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme_Applist_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/applist_button_background</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- For StagingActivity -->
    <style name="Theme_Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- For navigation drawer -->
    <style name="ButtonBarButton">
        <item name="android:background">#0000</item>
        <item name="android:textColor">#150101</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">#0000</item>
    </style>

    <style name="Common.Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="AppTheme11">
        <item name="android:textColor">#f11515</item>

    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#f0f9f8</item>
    </style>


    <declare-styleable name="CircleProgress">
        <attr name="circle_progress" format="integer"/>
        <attr name="circle_max" format="integer"/>
        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>
        <attr name="circle_text_size" format="dimension"/>
        <attr name="circle_text_color" format="color"/>
        <attr name="circle_prefix_text" format="string"/>
        <attr name="circle_suffix_text" format="string"/>
    </declare-styleable>

    <style name="AppThemeLocker" parent="Theme.AppCompat.Light.DarkActionBar">


        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#0b0000</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <string name="animscalemax">0.1f</string>
    <dimen name="dotradius">1dp</dimen>
    <string name="secretModeEnable">true</string>
    <string-array name="your_questions_array" >

        <item> Your Best friend\'s name ?</item>
        <item> Your Birthdate?</item>
        <item> Favorite Celebrity ? </item>


    </string-array>
</resources>